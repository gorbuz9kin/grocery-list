{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
